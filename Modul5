using System;
using static System.Console;


namespace CsharpLean
{
    class Program
    {
        #region Задание 1
        static string[] Separation(string Text)
        {
            string[] array_text = Text.Split(" ");
            return array_text;
        }

        static void Conclusion(string[] array)
        {
            foreach (var e in array)
                WriteLine(e);

        }
        static void Main(string[] args)
        {


            WriteLine("Введите текст: ");
            string text = ReadLine();
            string[] symbols = Separation(text);
            Conclusion(symbols);
            #endregion

            #region Задание 2
            /*static void Separation(string Text)
